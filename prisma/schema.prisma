generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Type {
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  income Income[]
}

model Income {
  id Int @id @default(autoincrement())
  amount Int
  count Int
  type Type @relation(fields: [typeId],references: [id],onDelete: Cascade)
  typeId Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Expenses {
  id Int @id @default(autoincrement())
  amount Int
  reason String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}